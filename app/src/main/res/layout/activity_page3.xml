<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page3">

    <TextView
        android:id="@+id/transaction_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Would you like to add $0.00 to cover the transaction fee?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/background_dark"
        android:textSize="65sp"
        app:layout_constraintBottom_toTopOf="@+id/button_yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar3" />

    <ImageView
        android:id="@+id/navbar3"
        android:layout_width="1280dp"
        android:layout_height="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/navbar" />

    <ImageButton
        android:id="@+id/button_cancel_page3"
        android:layout_width="218dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/navbar3"
        app:layout_constraintStart_toStartOf="@+id/navbar3"
        app:layout_constraintTop_toTopOf="@+id/navbar3"
        app:layout_constraintVertical_bias="0.47"
        app:srcCompat="@drawable/button_cancel" />

    <ImageButton
        android:id="@+id/button_yes"
        android:layout_width="641dp"
        android:layout_height="165dp"
        android:layout_marginBottom="100dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/button_yes" />

    <ImageButton
        android:id="@+id/button_no"
        android:layout_width="640dp"
        android:layout_height="165dp"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/button_yes"
        app:layout_constraintEnd_toStartOf="@+id/button_yes"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_no" />
</androidx.constraintlayout.widget.ConstraintLayout>